@model IEnumerable<MicroMagia.Domain.BackOffice.Entities.Career>

@{
    ViewData["Title"] = "Carreiras";
}

<link rel="stylesheet" href="~/css/ViewIndexCareer.css" />

<h2 class="page-title text-center">Carreiras</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-light text-center">
        Nenhuma carreira cadastrada.
    </div>
}
else
{
    <div class="career-container">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 justify-content-center align-content-between ">
            @foreach (var career in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-12 d-flex justify-content-center" style="margin: 10px">
                    <div class="career-card">

                        <h5 class="career-title">
                            @career.Title
                        </h5>

                        <a asp-action="GetCoursesByCareer"
                           asp-route-id="@career.Title"
                           class="btn-career">
                            Ver carreira â†’
                        </a>

                    </div>
                </div>
            }
        </div>
    </div>
}